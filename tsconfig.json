{
  "compilerOptions": {
    "target": "ES2023",         
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}